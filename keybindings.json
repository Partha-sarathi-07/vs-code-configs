// Place your key bindings in this file to override the defaults
[
    // { // just for testing purpose
    //     "key": "space + i",
    //     "command": "in-your-face.openview.focus"
    // },
    {
        "key": "ctrl+shift+3",
        "command": "sqltools.executeCurrentQuery"
    },
    { // added by partha
        "key": "alt+.",
        "command": "editor.action.quickFix",
        "when": "editorTextFocus"
    },
    {
        "key": "alt+space",
        "command": "editor.action.triggerSuggest",
        "when": "editorHasCompletionItemProvider && editorTextFocus && vim.mode == 'Insert'"
    },
    {
        "key": "escape",
        "command": "notebook.cell.quitEdit",
        "when": "inputFocus && notebookEditorFocused && vim.active && !editorHasSelection && !editorHoverVisible && vim.mode == 'Normal'"
    },
    {
        "key": "escape",
        "command": "-notebook.cell.quitEdit",
        "when": "inputFocus && notebookEditorFocused && vim.active && !editorHasSelection && !editorHoverVisible && vim.mode == 'Normal'"
    },
    {
        "key": "escape",
        "command": "extension.vim_escape",
        "when": "editorTextFocus && vim.active && !inDebugRepl"
    },
    {
        "key": "escape",
        "command": "-extension.vim_escape",
        "when": "editorTextFocus && vim.active && !inDebugRepl"
    },
    {
        "key": "alt+j",
        "command": "selectNextSuggestion",
        "when": "suggestWidgetVisible"
    },
    {
        "key": "alt+k",
        "command": "selectPrevSuggestion",
        "when": "suggestWidgetVisible"
    },
    {
        "key": "f",
        "command": "explorer.newFile",
        "when": "explorerViewletFocus && !inputFocus"
    },
    {
        "key": "d",
        "command": "explorer.newFolder",
        "when": "explorerViewletFocus && !inputFocus"
    },
    {
        "key": "x",
        "command": "deleteFile",
        "when": "explorerViewletFocus && !inputFocus"
    },
    {
        "key": "r",
        "command": "renameFile",
        "when": "explorerViewletVisible && filesExplorerFocus && !explorerResourceIsRoot && !explorerResourceReadonly && !inputFocus"
    },
    {
        "key": "enter",
        "command": "list.select",
        "when": "listFocus && !inputFocus"
    },
    {
        "key": "o",
        "command": "list.select",
        "when": "listFocus && !inputFocus"
    },
    {
        "key": "alt+h",
        "command": "workbench.action.focusActiveEditorGroup",
        "when": "in-your-face.openview.active"
    },
    {
        "key": "alt+l",
        "command": "workbench.action.navigateRight",
        "when": "vim.mode != 'Insert'"
    },
    {
        "key": "alt+k",
        "command": "workbench.action.navigateUp",
        "when": "vim.mode != 'Insert'"
    },
    {
        "key": "alt+j",
        "command": "workbench.action.navigateDown",
        "when": "vim.mode != 'Insert'"
    }
]
